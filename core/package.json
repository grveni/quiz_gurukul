{
  "name": "app-core",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "printenv": "dotenv -e .env -- printenv",
    "generate-schema": "node build/generateSchema.js",
    "setup-permissions": "dotenv -e .env -- bash -ec 'PGPASSWORD=$DB_PASS psql -U $DB_SUPERUSER -d $DB_NAME -h $DB_HOST -p $DB_PORT -v db_user=$DB_USER -f build/setup_permissions.sql'",
    "apply-schema": "dotenv -e .env -- bash -ec 'PGPASSWORD=$DB_PASS psql -U $DB_USER -d $DB_NAME -h $DB_HOST -p $DB_PORT -f build/schema.sql'",
    "build": "npm run generate-schema && npm run setup-permissions && npm run apply-schema",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles"
  },
  "keywords": [],
  "author": "Veni Gupta",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "express-validator": "^7.1.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "npm": "^10.8.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  }
}
